<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>To-Do-List</title>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro&family=Great+Vibes&display=swap" rel="stylesheet">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles/style.css" />
    </head>
    <body>
        <!-- HEADER -->
        <%- include("partials/header.ejs") %>

        <div class="containers">
            <h1 class="listType"><%= listType %></h1>
            <h1><%= today %></h1>
            <%# This will add all the Todo's %>
            <% if (locals.toDoList) { %>
                <div class="toDoList">
                    <form action="/submit" method="POST"></form>
                        <% for(var i = 0; i < toDoList.length; i++) { %>
                            <div class="<%= toDoList[i] + "-div" %> toDos">
                                <input id="<%= toDoList[i] %>" class="checkboxs form-check-input flex-shrink-0" type="checkbox">
                                <!-- <input type="checkbox" style="float: left; margin-top: 5px;"> -->
                                <h4><%= toDoList[i] %></h4>
                            </div>
                            <div class="space"></div>
                        <% } %>

                        <div class="add toDos">
                            <form action="/submit" method="POST">
                                <input class="addToDo" type="text" name="toDo" placeholder="ToDo:" />
                                <input class="addToDo" type="submit" value="Add" />
                            </form>
                        </div>
                    </form>
                </div>

            <% } else { %>
                    <div class="toDoList">
                        <div class="add toDos">
                            <form action="/submit" method="POST">
                                <input class="addToDo" type="text" name="toDo" placeholder="ToDo:" />
                                <input class="addToDo" type="submit" value="Add" />
                            </form>
                        </div>
                    </div>
                <% } %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        <script src="/front-end.js" charset="UTF-8"></script>
    </body>
</html>